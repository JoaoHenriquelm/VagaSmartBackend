generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum TransactionType {
  CREDITO
  DEBITO
  ESTORNO
}

enum GateEventType {
  ENTRADA
  SAIDA
  CANCELAMENTO
}

model User {
  id            String        @id @default(uuid())
  name          String
  email         String        @unique
  type          String
  hashPassword  String
  active        Boolean       @default(true)

  // Relacionamentos
  wallet        Wallet?
  vehicles      Vehicle[]
  gateEvents    GateEvent[]
  operatedEvents GateEvent[] @relation("OperatorRelations")
}

model Wallet {
  id        String      @id @default(uuid())
  userId    String      @unique
  balance   Float       @default(0)

  // Relacionamento
  user       User       @relation(fields: [userId], references: [id])
  transactions Transaction[]
}

model Transaction {
  id         String           @id @default(uuid())
  walletId   String
  type       TransactionType
  value      Float
  timestamp  Float        

  // Relacionamento
  wallet     Wallet           @relation(fields: [walletId], references: [id])
}

model Vehicle {
  id        String      @id @default(uuid())
  userId    String
  plate     String       @unique
  model     String
  active    Boolean      @default(true)

  // Relacionamento
  user      User         @relation(fields: [userId], references: [id])
  gateEvents GateEvent[]
}

model GateEvent {
  id          String         @id @default(uuid())
  userId      String
  vehicleId   String
  type        GateEventType
  timestamp   DateTime       @default(now())
  authorized  Boolean?
  operatorId  String?
  reason      String?

  // Relacionamentos
  user        User           @relation(fields: [userId], references: [id])
  vehicle     Vehicle        @relation(fields: [vehicleId], references: [id])

  operator    User?          @relation("OperatorRelations", fields: [operatorId], references: [id])
}
